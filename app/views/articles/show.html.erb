<div class="container">
  <div class="row">
    <div>
      <div>
      <strong> Title</strong>
        <p><%=@article.title %></p>
      </div>

      <div>
        <strong> Description</strong>
        <p><%=@article.description %></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div>
      <h2>Comments</h2>
      <%= render @article.comments %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div>
      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div>
       <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    </div>
  </div>
</div>

       

     